<VBox fx:controller="sample.Controller"
      xmlns:fx="http://javafx.com/fxml" alignment="center">
    <stylesheets><URL value="@/sample/Styles.css"/></stylesheets>
    <TextArea fx:id="MessageTextArea" VBox.vgrow="ALWAYS"/>
