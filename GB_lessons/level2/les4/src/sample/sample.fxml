<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import java.net.URL?>
<?scenebuilder-stylesheet src/sample/Style.css?>

<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>
